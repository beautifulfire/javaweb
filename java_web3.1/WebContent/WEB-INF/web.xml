<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
<!-- JSPC servlet mappings start -->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/servlet/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>login_i</servlet-name>
    <servlet-class>controller.Insert_uServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login_i</servlet-name>
    <url-pattern>/servlet/login_i</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>login_m</servlet-name>
    <servlet-class>controller.Login_mServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login_m</servlet-name>
    <url-pattern>/servlet/login_m</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>result</servlet-name>
    <servlet-class>controller.Result</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>result</servlet-name>
    <url-pattern>/servlet/result</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>select</servlet-name>
    <servlet-class>controller.SelectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>select</servlet-name>
    <url-pattern>/servlet/select</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>insert</servlet-name>
    <servlet-class>controller.InsertServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>insert</servlet-name>
    <url-pattern>/servlet/insert</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>controller.UpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/servlet/update</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>delete</servlet-name>
    <servlet-class>controller.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>delete</servlet-name>
    <url-pattern>/servlet/delete</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>bank</servlet-name>
    <servlet-class>controller.BankServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>bank</servlet-name>
    <url-pattern>/servlet/bank</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>decodeFilter</filter-name>
    <filter-class>filter.DecodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>decodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
<!-- JSPC servlet mappings end -->  
</web-app>